{
  "name": "infinite-scrolling-messages",
  "version": "1.0.0",
  "description": "An interface that shows a potentially very long list of messages using the Material Design Guide.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && parcel build src/index.html --no-source-maps",
    "serve": "npm run clean && parcel serve src/index.html --no-source-maps",
    "deploy": "npm run build && firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsRockyy/infinite-scrolling-messages.git"
  },
  "author": "Abhijeet Saxena",
  "license": "MIT",
  "homepage": "https://github.com/itsRockyy/infinite-scrolling-messages#readme",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "parcel-bundler": "^1.12.4"
  },
  "browserslist": [
    "> 5%"
  ],
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "postcss-cssnext": "^3.1.0"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": true
    }
  }
}
